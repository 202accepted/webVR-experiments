   <!-- Next button -->
   <a-image id="btnNext" src="assets/5/btn-next.png" height=".5" width=".5" position=" .9 1.4 0.3" rotation="10 -20 0">
      <!-- Animation for click -->
      <a-animation begin="click" easing="ease-in" attribute="scale" fill="forwards" from="1 1 1" to="2 2 2" dur="1000"></a-animation>
   </a-image>

   <!-- This will fill with text after load from the JS -->
   <a-entity id="human-text-container" position="0 .5 .2"></a-entity>

   <!-- Model and head cover -->
   <a-entity position='0 0 -.35'>
      <a-box height=".4" width=".4" depth=".4" rotation="20 10 0" position=".05 1.65 0" material="color: #333"></a-box>
      <a-collada-model position="0 0 -.25" rotation="5 0 0" scale="1 1 1" src="#humanModel"></a-collada-model>
   </a-entity>

